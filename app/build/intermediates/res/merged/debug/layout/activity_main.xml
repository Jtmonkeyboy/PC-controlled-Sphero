<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">
    <!--
    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server ip address" />

    <EditText
        android:id="@+id/portEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Server port number" />
   -->
    <Button
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adb Connect"
        android:layout_alignBaseline="@+id/BlueCon"
        android:layout_alignBottom="@+id/BlueCon"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/BlueCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Blue Connect" />

    <Button
        android:id="@+id/BlueStop"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Blue Stop"
        android:layout_alignBottom="@+id/responseTextView"
        android:layout_toEndOf="@+id/responseTextView" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="read"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_above="@+id/btn_90"
        android:layout_marginBottom="27dp" />

    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Text"
        android:layout_marginRight="23dp"
        android:layout_below="@+id/cb"
        android:layout_toStartOf="@+id/BlueCon"
        android:layout_marginTop="54dp" />


    <Button
        android:id="@+id/btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_180"
        android:layout_alignParentStart="true"
        android:minWidth="@dimen/buttondrive_btn_min_width"
        android:text="0" />

    <Button
        android:id="@+id/btn_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/buttondrive_btn_min_width"
        android:text="90"
        android:layout_alignBottom="@+id/btn_0"
        android:layout_alignStart="@+id/btn_270"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="29dp" />

    <Button
        android:id="@+id/btn_180"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/buttondrive_btn_min_width"
        android:text="180"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/btn_270"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/buttondrive_btn_min_width"
        android:text="270"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/buttondrive_btn_min_width"
        android:text="STOP"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/clearButton"
        android:layout_alignParentEnd="true" />



</RelativeLayout>